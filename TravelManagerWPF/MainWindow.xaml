<Window x:Class="TravelManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TravelManagerWPF.ViewModels"
        xmlns:helpers="clr-namespace:TravelManagerWPF.Helpers"
        mc:Ignorable="d"
        Title="Travel Manager - 여행 관리 시스템" Height="700" Width="1200" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 헤더 -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🌍 Travel Manager" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                <Button Content="💾 저장" Command="{Binding SaveDataCommand}" Background="#4CAF50" Foreground="White" Margin="20,0,0,0"/>
                <Button Content="📁 불러오기" Command="{Binding LoadDataCommand}" Background="#FF9800" Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- 메인 탭 컨트롤 -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 여행 상품 관리 탭 -->
            <TabItem Header="✈️ 여행 상품 관리">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 검색 및 필터 -->
                    <GroupBox Grid.Row="0" Header="🔍 검색 및 필터" Padding="10" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="검색:" Width="50"/>
                            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" Width="200" 
                                     ToolTip="상품명, 목적지, 설명에서 검색"/>
                            <TextBlock Text="목적지:" Width="50" Margin="20,2,5,2"/>
                            <ComboBox ItemsSource="{Binding DestinationOptions}" 
                                      SelectedItem="{Binding SelectedDestinationFilter}" Width="150"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- 상품 추가 폼 -->
                    <GroupBox Grid.Row="1" Header="➕ 새 상품 추가" Padding="10" Margin="5">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="150">
                                    <TextBlock Text="상품명*"/>
                                    <TextBox Text="{Binding NewProduct.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="150">
                                    <TextBlock Text="목적지*"/>
                                    <TextBox Text="{Binding NewProduct.Destination, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="120">
                                    <TextBlock Text="가격 (₩)"/>
                                    <TextBox Text="{Binding NewProduct.Price, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="시작 날짜"/>
                                    <DatePicker SelectedDate="{Binding NewProduct.StartDate, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="100">
                                    <TextBlock Text="기간 (일)"/>
                                    <TextBox Text="{Binding NewProduct.DurationDays, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="400">
                                    <TextBlock Text="설명"/>
                                    <TextBox Text="{Binding NewProduct.Description, UpdateSourceTrigger=PropertyChanged}" Height="60" 
                                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                <Button Content="✅ 추가" Command="{Binding AddProductCommand}" Margin="20,25,0,0" 
                                        VerticalAlignment="Top" Height="40" Background="#4CAF50" Foreground="White"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 편집 폼 -->
                    <GroupBox Grid.Row="2" Header="✏️ 상품 편집" Padding="10" Margin="5" 
                              Visibility="{Binding IsEditing, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="150">
                                    <TextBlock Text="상품명*"/>
                                    <TextBox Text="{Binding EditingProduct.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="150">
                                    <TextBlock Text="목적지*"/>
                                    <TextBox Text="{Binding EditingProduct.Destination, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="120">
                                    <TextBlock Text="가격 (₩)"/>
                                    <TextBox Text="{Binding EditingProduct.Price, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="시작 날짜"/>
                                    <DatePicker SelectedDate="{Binding EditingProduct.StartDate, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="100">
                                    <TextBlock Text="기간 (일)"/>
                                    <TextBox Text="{Binding EditingProduct.DurationDays, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="400">
                                    <TextBlock Text="설명"/>
                                    <TextBox Text="{Binding EditingProduct.Description, UpdateSourceTrigger=PropertyChanged}" Height="60" 
                                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,25,0,0" VerticalAlignment="Top">
                                    <Button Content="💾 저장" Command="{Binding SaveProductCommand}" Background="#4CAF50" Foreground="White"/>
                                    <Button Content="❌ 취소" Command="{Binding CancelEditCommand}" Background="#F44336" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 상품 목록 -->
                    <GroupBox Grid.Row="3" Header="📋 상품 목록" Padding="10" Margin="5">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 작업 버튼들 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="✏️ 편집" Command="{Binding EditProductCommand}" 
                                        IsEnabled="{Binding IsProductSelected}" Background="#2196F3" Foreground="White"/>
                                <Button Content="🗑️ 삭제" Command="{Binding DeleteProductCommand}" 
                                        IsEnabled="{Binding IsProductSelected}" Background="#F44336" Foreground="White"/>
                            </StackPanel>

                            <!-- 데이터 그리드 -->
                            <DataGrid Grid.Row="1" ItemsSource="{Binding Products}" 
                                      SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
                                      AutoGenerateColumns="False" CanUserAddRows="False" 
                                      GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="상품명" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="목적지" Binding="{Binding Destination}" Width="120" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="가격" Binding="{Binding Price, StringFormat=₩{0:N0}}" Width="100" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="시작일" Binding="{Binding StartDate, StringFormat=yyyy-MM-dd}" Width="100" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="기간" Binding="{Binding DurationDays}" Width="60" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="종료일" Binding="{Binding EndDate, StringFormat=yyyy-MM-dd}" Width="100" IsReadOnly="True"/>
                                    <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="200" IsReadOnly="True"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <!-- 여행 일정 관리 탭 -->
            <TabItem Header="🗓️ 여행 일정">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 일정 추가/편집 폼 -->
                    <StackPanel Grid.Row="0">
                        <!-- 일정 추가 폼 -->
                        <GroupBox Header="➕ 새 일정 추가" Padding="10" Margin="5">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="200">
                                    <TextBlock Text="연결된 상품 ID"/>
                                    <TextBox Text="{Binding NewItinerary.ProductId, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="300">
                                    <TextBlock Text="일정 제목*"/>
                                    <TextBox Text="{Binding NewItinerary.Title, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <Button Content="✅ 추가" Command="{Binding AddItineraryCommand}" Margin="20,25,0,0" 
                                        VerticalAlignment="Top" Height="40" Background="#4CAF50" Foreground="White"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 일정 편집 폼 -->
                        <GroupBox Header="✏️ 일정 편집" Padding="10" Margin="5" 
                                  Visibility="{Binding IsEditingItinerary, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <StackPanel Width="200">
                                    <TextBlock Text="연결된 상품 ID"/>
                                    <TextBox Text="{Binding EditingItinerary.ProductId, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Width="300">
                                    <TextBlock Text="일정 제목*"/>
                                    <TextBox Text="{Binding EditingItinerary.Title, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="20,25,0,0" VerticalAlignment="Top">
                                    <Button Content="💾 저장" Command="{Binding SaveItineraryCommand}" Background="#4CAF50" Foreground="White"/>
                                    <Button Content="❌ 취소" Command="{Binding CancelEditItineraryCommand}" Background="#F44336" Foreground="White"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>

                    <!-- 메인 콘텐츠 -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 일정 목록 -->
                        <GroupBox Grid.Column="0" Header="📋 일정 목록" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 일정 작업 버튼들 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Content="✏️ 편집" Command="{Binding EditItineraryCommand}" 
                                            IsEnabled="{Binding IsItinerarySelected}" Background="#2196F3" Foreground="White"/>
                                    <Button Content="🗑️ 삭제" Command="{Binding DeleteItineraryCommand}" 
                                            IsEnabled="{Binding IsItinerarySelected}" Background="#F44336" Foreground="White"/>
                                </StackPanel>

                                <!-- 일정 리스트 -->
                                <ListBox Grid.Row="1" ItemsSource="{Binding Itineraries}" 
                                         SelectedItem="{Binding SelectedItinerary, Mode=TwoWay}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding ProductId, StringFormat=상품 ID: {0}}" 
                                                           FontSize="10" Foreground="Gray"/>
                                                <TextBlock Text="{Binding DaySchedules.Count, StringFormat='{}{0}일 일정'}" 
                                                           FontSize="10" Foreground="Blue"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>

                        <!-- 일정 상세 정보 -->
                        <Grid Grid.Column="1" Margin="10,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 일차별 스케줄 관리 -->
                            <GroupBox Grid.Row="0" Header="📅 일차별 스케줄 관리" Padding="10">
                                <StackPanel>
                                    <!-- 일차 추가 폼 -->
                                    <GroupBox Header="새 일차 추가" Padding="5" Margin="0,0,0,10" 
                                              IsEnabled="{Binding IsItinerarySelected}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Width="80">
                                                <TextBlock Text="일차"/>
                                                <TextBox Text="{Binding NewDaySchedule.DayNumber, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="날짜"/>
                                                <DatePicker SelectedDate="{Binding NewDaySchedule.Date, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Width="150">
                                                <TextBlock Text="숙박"/>
                                                <TextBox Text="{Binding NewDaySchedule.Accommodation, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Width="150">
                                                <TextBlock Text="교통"/>
                                                <TextBox Text="{Binding NewDaySchedule.Transportation, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <Button Content="➕" Command="{Binding AddDayScheduleCommand}" 
                                                    Margin="10,20,0,0" VerticalAlignment="Top" Background="#4CAF50" Foreground="White"/>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- 일차 편집 폼 -->
                                    <GroupBox Header="일차 편집" Padding="5" Margin="0,0,0,10" 
                                              Visibility="{Binding IsEditingDaySchedule, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel Orientation="Horizontal">
                                            <StackPanel Width="80">
                                                <TextBlock Text="일차"/>
                                                <TextBox Text="{Binding EditingDaySchedule.DayNumber, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel>
                                                <TextBlock Text="날짜"/>
                                                <DatePicker SelectedDate="{Binding EditingDaySchedule.Date, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Width="150">
                                                <TextBlock Text="숙박"/>
                                                <TextBox Text="{Binding EditingDaySchedule.Accommodation, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Width="150">
                                                <TextBlock Text="교통"/>
                                                <TextBox Text="{Binding EditingDaySchedule.Transportation, UpdateSourceTrigger=PropertyChanged}"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="10,20,0,0" VerticalAlignment="Top">
                                                <Button Content="💾" Command="{Binding SaveDayScheduleCommand}" Background="#4CAF50" Foreground="White"/>
                                                <Button Content="❌" Command="{Binding CancelEditDayScheduleCommand}" Background="#F44336" Foreground="White"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- 일차별 스케줄 목록 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <Button Content="✏️ 편집" Command="{Binding EditDayScheduleCommand}" 
                                                IsEnabled="{Binding IsDayScheduleSelected}" Background="#2196F3" Foreground="White"/>
                                        <Button Content="🗑️ 삭제" Command="{Binding DeleteDayScheduleCommand}" 
                                                IsEnabled="{Binding IsDayScheduleSelected}" Background="#F44336" Foreground="White"/>
                                    </StackPanel>
                                    
                                    <DataGrid ItemsSource="{Binding SelectedItineraryDays}" 
                                              SelectedItem="{Binding SelectedDaySchedule, Mode=TwoWay}"
                                              AutoGenerateColumns="False" CanUserAddRows="False" 
                                              Height="150" GridLinesVisibility="Horizontal">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="일차" Binding="{Binding DayNumber}" Width="50"/>
                                            <DataGridTextColumn Header="날짜" Binding="{Binding Date, StringFormat=yyyy-MM-dd}" Width="100"/>
                                            <DataGridTextColumn Header="숙박" Binding="{Binding Accommodation}" Width="*"/>
                                            <DataGridTextColumn Header="교통" Binding="{Binding Transportation}" Width="*"/>
                                            <DataGridTextColumn Header="활동수" Binding="{Binding Activities.Count}" Width="60"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </GroupBox>

                            <!-- 활동 관리 -->
                            <GroupBox Grid.Row="1" Header="🎯 활동 관리" Padding="10" Margin="0,10,0,0">
                                <StackPanel>
                                    <!-- 활동 추가 폼 -->
                                    <GroupBox Header="새 활동 추가" Padding="5" Margin="0,0,0,10" 
                                              IsEnabled="{Binding IsDayScheduleSelected}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <StackPanel Width="150">
                                                    <TextBlock Text="활동명*"/>
                                                    <TextBox Text="{Binding NewActivity.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                                <StackPanel Width="100">
                                                    <TextBlock Text="시작 시간"/>
                                                    <TextBox Text="{Binding NewActivity.StartTime, UpdateSourceTrigger=PropertyChanged, StringFormat=hh\\:mm}"/>
                                                </StackPanel>
                                                <StackPanel Width="100">
                                                    <TextBlock Text="종료 시간"/>
                                                    <TextBox Text="{Binding NewActivity.EndTime, UpdateSourceTrigger=PropertyChanged, StringFormat=hh\\:mm}"/>
                                                </StackPanel>
                                                <StackPanel Width="150">
                                                    <TextBlock Text="장소"/>
                                                    <TextBox Text="{Binding NewActivity.Location, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <StackPanel Width="400">
                                                    <TextBlock Text="설명"/>
                                                    <TextBox Text="{Binding NewActivity.Description, UpdateSourceTrigger=PropertyChanged}" 
                                                             Height="50" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                                </StackPanel>
                                                <Button Content="➕ 추가" Command="{Binding AddActivityCommand}" 
                                                        Margin="20,25,0,0" VerticalAlignment="Top" Background="#4CAF50" Foreground="White"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- 활동 편집 폼 -->
                                    <GroupBox Header="활동 편집" Padding="5" Margin="0,0,0,10" 
                                              Visibility="{Binding IsEditingActivity, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <StackPanel Width="150">
                                                    <TextBlock Text="활동명*"/>
                                                    <TextBox Text="{Binding EditingActivity.Name, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                                <StackPanel Width="100">
                                                    <TextBlock Text="시작 시간"/>
                                                    <TextBox Text="{Binding EditingActivity.StartTime, UpdateSourceTrigger=PropertyChanged, StringFormat=hh\\:mm}"/>
                                                </StackPanel>
                                                <StackPanel Width="100">
                                                    <TextBlock Text="종료 시간"/>
                                                    <TextBox Text="{Binding EditingActivity.EndTime, UpdateSourceTrigger=PropertyChanged, StringFormat=hh\\:mm}"/>
                                                </StackPanel>
                                                <StackPanel Width="150">
                                                    <TextBlock Text="장소"/>
                                                    <TextBox Text="{Binding EditingActivity.Location, UpdateSourceTrigger=PropertyChanged}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                                <StackPanel Width="400">
                                                    <TextBlock Text="설명"/>
                                                    <TextBox Text="{Binding EditingActivity.Description, UpdateSourceTrigger=PropertyChanged}" 
                                                             Height="50" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="20,25,0,0" VerticalAlignment="Top">
                                                    <Button Content="💾 저장" Command="{Binding SaveActivityCommand}" Background="#4CAF50" Foreground="White"/>
                                                    <Button Content="❌ 취소" Command="{Binding CancelEditActivityCommand}" Background="#F44336" Foreground="White"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- 활동 목록 -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <Button Content="✏️ 편집" Command="{Binding EditActivityCommand}" 
                                                IsEnabled="{Binding IsActivitySelected}" Background="#2196F3" Foreground="White"/>
                                        <Button Content="🗑️ 삭제" Command="{Binding DeleteActivityCommand}" 
                                                IsEnabled="{Binding IsActivitySelected}" Background="#F44336" Foreground="White"/>
                                    </StackPanel>
                                    
                                    <DataGrid ItemsSource="{Binding SelectedDayActivities}" 
                                              SelectedItem="{Binding SelectedActivity, Mode=TwoWay}"
                                              AutoGenerateColumns="False" CanUserAddRows="False" 
                                              GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="활동명" Binding="{Binding Name}" Width="*"/>
                                            <DataGridTextColumn Header="시작" Binding="{Binding StartTime, StringFormat=hh\\:mm}" Width="60"/>
                                            <DataGridTextColumn Header="종료" Binding="{Binding EndTime, StringFormat=hh\\:mm}" Width="60"/>
                                            <DataGridTextColumn Header="장소" Binding="{Binding Location}" Width="120"/>
                                            <DataGridTextColumn Header="설명" Binding="{Binding Description}" Width="150"/>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </StackPanel>
                            </GroupBox>
                        </Grid>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- 예약 관리 탭 -->
            <TabItem Header="👥 예약 관리">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 상단 검색 및 필터 영역 -->
                    <GroupBox Grid.Row="0" Header="🔍 검색 및 필터" Padding="10" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="250">
                                <TextBlock Text="검색 (고객명, 이메일, 전화번호)"/>
                                <TextBox Text="{Binding ReservationSearchText, UpdateSourceTrigger=PropertyChanged}" 
                                         Height="25"/>
                            </StackPanel>
                            <StackPanel Width="150" Margin="10,0">
                                <TextBlock Text="상태 필터"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="전체" IsChecked="{Binding ShowAllStatuses}" 
                                              Margin="0,5,10,0"/>
                                    <ComboBox ItemsSource="{Binding StatusOptions}" 
                                              SelectedItem="{Binding SelectedStatusFilter}"
                                              Width="100" Height="25"
                                              IsEnabled="{Binding ShowAllStatuses, Converter={StaticResource InverseBooleanConverter}}"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- 메인 예약 관리 영역 -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- 예약 목록 -->
                        <GroupBox Grid.Column="0" Header="📝 예약 목록" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- 예약 관리 버튼들 -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                    <Button Content="✏️ 편집" Command="{Binding EditReservationCommand}" 
                                            IsEnabled="{Binding IsReservationSelected}" Background="#2196F3" Foreground="White"/>
                                    <Button Content="✅ 확정" Command="{Binding ConfirmReservationCommand}" 
                                            IsEnabled="{Binding IsReservationSelected}" Background="#4CAF50" Foreground="White"/>
                                    <Button Content="❌ 취소" Command="{Binding CancelReservationCommand}" 
                                            IsEnabled="{Binding IsReservationSelected}" Background="#FF9800" Foreground="White"/>
                                    <Button Content="✔️ 완료" Command="{Binding CompleteReservationCommand}" 
                                            IsEnabled="{Binding IsReservationSelected}" Background="#9C27B0" Foreground="White"/>
                                    <Button Content="🗑️ 삭제" Command="{Binding DeleteReservationCommand}" 
                                            IsEnabled="{Binding IsReservationSelected}" Background="#F44336" Foreground="White"/>
                                </StackPanel>

                                <!-- 예약 DataGrid -->
                                <DataGrid Grid.Row="1" ItemsSource="{Binding Reservations}" 
                                          SelectedItem="{Binding SelectedReservation, Mode=TwoWay}"
                                          AutoGenerateColumns="False" CanUserAddRows="False" 
                                          GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="예약번호" Binding="{Binding Id}" Width="70"/>
                                        <DataGridTextColumn Header="고객명" Binding="{Binding CustomerName}" Width="100"/>
                                        <DataGridTextColumn Header="이메일" Binding="{Binding CustomerEmail}" Width="150"/>
                                        <DataGridTextColumn Header="전화번호" Binding="{Binding CustomerPhone}" Width="120"/>
                                        <DataGridTextColumn Header="예약일" Binding="{Binding ReservationDate, StringFormat=yyyy-MM-dd}" Width="80"/>
                                        <DataGridTextColumn Header="인원" Binding="{Binding NumberOfPeople}" Width="50"/>
                                        <DataGridTextColumn Header="총액" Binding="{Binding TotalAmount, StringFormat=N0}" Width="80"/>
                                        <DataGridTextColumn Header="상태" Binding="{Binding Status}" Width="70">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                            <Setter Property="Foreground" Value="Orange"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                                                            <Setter Property="Foreground" Value="Green"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                            <Setter Property="Foreground" Value="Red"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                            <Setter Property="Foreground" Value="Purple"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </GroupBox>

                        <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="LightGray"/>

                        <!-- 예약 추가/편집 폼 -->
                        <GroupBox Grid.Column="2" Header="📋 예약 정보" Padding="10">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <!-- 새 예약 추가 폼 -->
                                    <GroupBox Header="새 예약 추가" Padding="10" Margin="0,0,0,10"
                                              Visibility="{Binding IsEditingReservation, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <StackPanel>
                                            <!-- 상품 선택 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="여행 상품*"/>
                                                <ComboBox ItemsSource="{Binding ProductsForReservation}"
                                                          SelectedValue="{Binding NewReservation.ProductId}"
                                                          SelectedValuePath="Id"
                                                          DisplayMemberPath="Name"
                                                          Height="25"/>
                                            </StackPanel>

                                            <!-- 고객 정보 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="고객명*"/>
                                                <TextBox Text="{Binding NewReservation.CustomerName, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="이메일*"/>
                                                <TextBox Text="{Binding NewReservation.CustomerEmail, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="전화번호"/>
                                                <TextBox Text="{Binding NewReservation.CustomerPhone, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <!-- 예약 정보 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="예약일*"/>
                                                <DatePicker SelectedDate="{Binding NewReservation.ReservationDate, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="인원*"/>
                                                <TextBox Text="{Binding NewReservation.NumberOfPeople, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="상태"/>
                                                <ComboBox ItemsSource="{Binding StatusOptions}"
                                                          SelectedItem="{Binding NewReservation.Status}"
                                                          Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="특별 요청사항"/>
                                                <TextBox Text="{Binding NewReservation.SpecialRequests, UpdateSourceTrigger=PropertyChanged}" 
                                                         Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                                            </StackPanel>

                                            <Button Content="➕ 예약 추가" Command="{Binding AddReservationCommand}" 
                                                    Margin="0,10,0,0" Background="#4CAF50" Foreground="White" Height="35"/>
                                        </StackPanel>
                                    </GroupBox>

                                    <!-- 예약 편집 폼 -->
                                    <GroupBox Header="예약 편집" Padding="10" Margin="0,0,0,10"
                                              Visibility="{Binding IsEditingReservation, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <StackPanel>
                                            <!-- 상품 선택 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="여행 상품*"/>
                                                <ComboBox ItemsSource="{Binding ProductsForReservation}"
                                                          SelectedValue="{Binding EditingReservation.ProductId}"
                                                          SelectedValuePath="Id"
                                                          DisplayMemberPath="Name"
                                                          Height="25"/>
                                            </StackPanel>

                                            <!-- 고객 정보 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="고객명*"/>
                                                <TextBox Text="{Binding EditingReservation.CustomerName, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="이메일*"/>
                                                <TextBox Text="{Binding EditingReservation.CustomerEmail, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="전화번호"/>
                                                <TextBox Text="{Binding EditingReservation.CustomerPhone, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <!-- 예약 정보 -->
                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="예약일*"/>
                                                <DatePicker SelectedDate="{Binding EditingReservation.ReservationDate, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="인원*"/>
                                                <TextBox Text="{Binding EditingReservation.NumberOfPeople, UpdateSourceTrigger=PropertyChanged}" Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="상태"/>
                                                <ComboBox ItemsSource="{Binding StatusOptions}"
                                                          SelectedItem="{Binding EditingReservation.Status}"
                                                          Height="25"/>
                                            </StackPanel>

                                            <StackPanel Margin="0,5">
                                                <TextBlock Text="특별 요청사항"/>
                                                <TextBox Text="{Binding EditingReservation.SpecialRequests, UpdateSourceTrigger=PropertyChanged}" 
                                                         Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                                            </StackPanel>

                                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                                <Button Content="💾 저장" Command="{Binding SaveReservationCommand}" 
                                                        Background="#4CAF50" Foreground="White" Height="35" Width="70"/>
                                                <Button Content="❌ 취소" Command="{Binding CancelEditReservationCommand}" 
                                                        Background="#F44336" Foreground="White" Height="35" Width="70" Margin="10,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>
                                </StackPanel>
                            </ScrollViewer>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- 통계 및 차트 탭 -->
            <TabItem Header="📊 통계">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 요약 통계 카드들 -->
                        <GroupBox Grid.Row="0" Header="📈 주요 지표" Padding="10" Margin="5">
                            <UniformGrid Rows="2" Columns="3" Margin="10">
                                <!-- 총 매출 -->
                                <Border Background="#E3F2FD" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="총 매출" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalRevenue, StringFormat=₩{0:N0}}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#1976D2" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- 총 예약 건수 -->
                                <Border Background="#E8F5E8" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="📊" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="총 예약" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding TotalReservations, StringFormat={}{0}건}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#388E3C" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- 확정 예약 -->
                                <Border Background="#FFF3E0" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="✅" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="확정 예약" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding ConfirmedReservations, StringFormat={}{0}건}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#F57C00" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- 완료 예약 -->
                                <Border Background="#F3E5F5" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="🎉" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="완료 예약" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding CompletedReservations, StringFormat={}{0}건}" 
                                                   FontSize="18" FontWeight="Bold" Foreground="#7B1FA2" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- 인기 목적지 -->
                                <Border Background="#E0F2F1" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="🌟" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="인기 목적지" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding MostPopularDestination}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#00695C" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- 평균 예약 금액 -->
                                <Border Background="#FCE4EC" Padding="15" Margin="5" CornerRadius="8">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="💵" FontSize="24" HorizontalAlignment="Center"/>
                                        <TextBlock Text="평균 예약금액" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding AverageReservationAmount, StringFormat=₩{0:N0}}" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#C2185B" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </UniformGrid>
                        </GroupBox>

                        <!-- 차트 영역 -->
                        <GroupBox Grid.Row="2" Header="📊 상세 분석" Padding="10" Margin="5">
                            <TabControl>
                                <!-- 월별 매출 차트 -->
                                <TabItem Header="💰 월별 매출">
                                    <Grid>
                                        <Border Background="White" Padding="10" Margin="5">
                                            <StackPanel>
                                                <TextBlock Text="월별 매출 현황" FontSize="16" FontWeight="Bold" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                <lvc:CartesianChart Series="{Binding MonthlyRevenueSeries}"
                                                                    XAxes="{Binding MonthlyRevenueXAxes}"
                                                                    YAxes="{Binding MonthlyRevenueYAxes}"
                                                                    TooltipTextPaint="{Binding TooltipTextPaint}"
                                                                    Height="300"
                                                                    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </TabItem>

                                <!-- 목적지별 인기도 차트 -->
                                <TabItem Header="🌍 목적지 인기도">
                                    <Grid>
                                        <Border Background="White" Padding="10" Margin="5">
                                            <StackPanel>
                                                <TextBlock Text="목적지별 예약 현황" FontSize="16" FontWeight="Bold" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                <lvc:CartesianChart Series="{Binding DestinationPopularitySeries}"
                                                                    XAxes="{Binding DestinationPopularityXAxes}"
                                                                    YAxes="{Binding DestinationPopularityYAxes}"
                                                                    TooltipTextPaint="{Binding TooltipTextPaint}"
                                                                    Height="300"
                                                                    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </TabItem>

                                <!-- 예약 상태별 분포 차트 -->
                                <TabItem Header="📈 예약 상태">
                                    <Grid>
                                        <Border Background="White" Padding="10" Margin="5">
                                            <StackPanel>
                                                <TextBlock Text="예약 상태별 분포" FontSize="16" FontWeight="Bold" 
                                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                                <lvc:PieChart Series="{Binding ReservationStatusSeries}"
                                                              TooltipTextPaint="{Binding TooltipTextPaint}"
                                                              Height="300"
                                                              xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </GroupBox>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- 상태바 -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding Products.Count, StringFormat=총 {0}개 상품}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding Reservations.Count, StringFormat=총 {0}개 예약}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="Travel Manager v1.0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 